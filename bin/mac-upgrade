#!/usr/bin/env zsh

if ! command -v brew &> /dev/null
then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

printf "\e[1;34m%s\e[0m\n" "ğŸº Brew update and upgrade"
brew update && brew upgrade && brew upgrade --cask --greedy
brew cleanup && brew autoremove && brew doctor

if [[ -f "$(brew --prefix antidote)/share/antidote/antidote.zsh" ]]; then
  printf "\e[1;34m%s\e[0m\n" "Antidote update"
  source "$(brew --prefix antidote)/share/antidote/antidote.zsh"
  antidote update
fi

printf "\e[1;34m%s\e[0m\n" "ğŸ’» Update macOS"
softwareupdate -i -a

# VS Code and Cursor extensions update
if [[ -f "code" ]]; then
  printf "\e[1;34m%s\e[0m\n" "ğŸ’» VS Code extensions update"
  code --update-extensions
fi

if [[ -f "cursor" ]]; then
  printf "\e[1;34m%s\e[0m\n" "ğŸ’» Cursor extensions update"
  cursor --update-extensions
fi

if [[ -f "mas" ]]; then
  printf "\e[1;34m%s\e[0m\n" "ğŸ’» Mac App Store apps update"
  mas upgrade
fi

printf "\e[1;32m%s\e[0m\n" "âœ… Done! Your system is up to date!"